{% extends 'base.html.twig' %}

{% block body %}
    <h1>Nivel</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ nivel.id }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ nivel.tipo }}</td>
            </tr>
            <tr>
                <th>Estatus</th>
                <td>{{ nivel.estatus }}</td>
            </tr>
            <tr>
                <th>Icono</th>
                <td>{{ nivel.icono }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ nivel.nombre }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ nivel.color }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('nivel_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('nivel_edit', { 'id': nivel.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
