{% form_theme form 'form/fields.html.twig' %}

<div class="col-md-12">
    <div class="box box-primary">
        <div class="box-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="form-group col-md-8">
                    {{ form_label(form.nombre) }}
                    {{ form_widget(form.nombre) }}
                    {{ form_errors(form.nombre) }}
                </div>
                <div class="form-group col-md-4">
                    {{ form_label(form.abreviacion) }}
                    {{ form_widget(form.abreviacion) }}
                    {{ form_errors(form.abreviacion) }}
                </div>
                <div class="form-group col-md-8">
                    {{ form_label(form.web) }}
                    {{ form_widget(form.web) }}
                    {{ form_errors(form.web) }}
                </div>
                <div class="form-group col-md-4">
                    {{ form_label(form.pais) }}
                    {{ form_widget(form.pais) }}
                    {{ form_errors(form.pais) }}
                </div>
                <div class="form-group col-md-12">
                    <input id="btn-iglesias-guardar" type="button" class="btn btn-primary" value="Guardar Familia">
                    <button id="btn-iglesias-cancelar" type="button" class="btn btn-default">Cancelar</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

