{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Registrar Persona Ganada</h2>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            {{ form_start(form) }}
            <div class="panel-heading">
                Ingrese los datos de la persona.
            </div>

            <div class="panel-body">

                <div class="col-lg-4">
                    <div class="form-group">
                        {{ form_label(form.nombres) }}
                        {{ form_errors(form.nombres) }}
                        {{ form_widget(form.nombres) }}
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        {{ form_label(form.correo) }}
                        {{ form_errors(form.correo) }}
                        {{ form_widget(form.correo) }}
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        {{ form_label(form.telefono) }}
                        {{ form_errors(form.telefono) }}
                        {{ form_widget(form.telefono) }}
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        {{ form_label(form.rolFamilia) }}
                        {{ form_errors(form.rolFamilia) }}
                        {{ form_widget(form.rolFamilia) }}
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        {{ form_label(form.metodoGanar) }}
                        {{ form_errors(form.metodoGanar) }}
                        {{ form_widget(form.metodoGanar) }}
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        {{ form_label(form.fechaGanado) }}
                        {{ form_errors(form.fechaGanado) }}
                        {{ form_widget(form.fechaGanado) }}
                    </div>
                </div>
                <div class="col-lg-12">
                </div>
                <div id="notificaciones"></div>
            </div>
            <div class="panel-footer">
                <input type="submit" class="btn btn-primary" value="Guardar" />
                <button type="reset" class="btn btn-default">Limpiar</button>
                <button type="button" id="btn-ganados-registrar-cancelar" class="btn btn-default">Cancelar</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

    {#<div class="input-group date">#}
        {#<input type="text" class="form-control"><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>#}
    {#</div>#}
