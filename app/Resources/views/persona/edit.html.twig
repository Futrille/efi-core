{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">Editar Persona Ganada</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                {{ form_start(edit_form) }}
                <div class="panel-heading">
                    Ingrese los datos de la persona.
                </div>

                <div class="panel-body">

                    <div class="col-lg-6">
                        <div class="form-group">
                            {{ form_label(edit_form.cedula) }}
                            {{ form_errors(edit_form.cedula) }}
                            {{ form_widget(edit_form.cedula) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(edit_form.nombres) }}
                            {{ form_errors(edit_form.nombres) }}
                            {{ form_widget(edit_form.nombres) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(edit_form.apellidos) }}
                            {{ form_errors(edit_form.apellidos) }}
                            {{ form_widget(edit_form.apellidos) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(edit_form.fechaNacimiento) }}
                            {{ form_errors(edit_form.fechaNacimiento) }}
                            {{ form_widget(edit_form.fechaNacimiento) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(edit_form.nacionalidad) }}
                            {{ form_errors(edit_form.nacionalidad) }}
                            {{ form_widget(edit_form.nacionalidad) }}
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            {{ form_label(edit_form.sexo) }}
                            {{ form_errors(edit_form.sexo) }}
                            {{ form_widget(edit_form.sexo) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(edit_form.metodoGanar) }}
                            {{ form_errors(edit_form.metodoGanar) }}
                            {{ form_widget(edit_form.metodoGanar) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(edit_form.correo) }}
                            {{ form_errors(edit_form.correo) }}
                            {{ form_widget(edit_form.correo) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(edit_form.telefono) }}
                            {{ form_errors(edit_form.telefono) }}
                            {{ form_widget(edit_form.telefono) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(edit_form.direccion) }}
                            {{ form_errors(edit_form.direccion) }}
                            {{ form_widget(edit_form.direccion) }}
                        </div>
                    </div>
                    <div id="notificaciones"></div>
                </div>
                <div class="panel-footer">
                    <input type="submit" class="btn btn-primary" value="Guardar" />
                    <button type="reset" class="btn btn-default">Limpiar</button>
                </div>
                {{ form_end(edit_form) }}
                {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-danger" value="Eliminar">
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>

    {#<div class="input-group date">#}
    {#<input type="text" class="form-control"><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>#}
    {#</div>#}
    {#<ul>#}
    {#<li>#}
    {#<a href="{{ path('persona_index') }}">Back to the list</a>#}
    {#</li>#}
    {#</ul>#}
{% endblock %}


