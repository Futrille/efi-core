{% block body %}
    <h1>Familia</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ familium.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ familium.nombre }}</td>
            </tr>
